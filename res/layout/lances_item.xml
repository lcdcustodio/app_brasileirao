<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    android:orientation="vertical" >

    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/feed_item_margin"
	    android:layout_marginRight="@dimen/feed_item_margin"        
	    android:background="@color/white"
	    android:orientation="vertical">
        
	<RelativeLayout
		android:id="@+id/timestamp"
		android:layout_marginLeft="@dimen/feed_item_margin"
		android:layout_marginRight="@dimen/feed_item_margin"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:orientation="horizontal">
	           
	       
        
        
	       <TextView
			 android:id="@+id/minutes"
			 android:layout_centerHorizontal="true"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_marginTop="@dimen/feed_item_margin"
			 android:text="46'"
			 android:textColor="@color/timestamp"
			 android:textSize="@dimen/sigla" />

	       <TextView
			 android:id="@+id/extra_info"
			 android:layout_centerHorizontal="true"
			 android:layout_below="@+id/minutes"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_marginTop="@dimen/feed_item_margin"
			 android:text="2Â° TEMPO"
			 android:textColor="@color/timestamp"
			 android:textSize="@dimen/servico" />
       
	</RelativeLayout>
       
	<RelativeLayout
		android:id="@+id/timeline"
		android:layout_toRightOf="@+id/timestamp"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/feed_item_padding_left_right"
		android:paddingRight="@dimen/feed_item_padding_left_right" >
	       
	
		    <View
		        
		        android:layout_width="1dp"
		        android:layout_centerHorizontal="true"
		        android:layout_height="match_parent"
		        android:background="@color/silver"/>
		 
		
		    <View
		        
		        android:layout_width="12dp"        
		        android:layout_height="12dp"
			android:layout_marginTop="@dimen/feed_item_margin"
		        android:layout_centerHorizontal="true"
		        android:background="@drawable/bg_circle"/>
	    

	    
	    
	</RelativeLayout>	
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_toRightOf="@+id/timeline"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/feed_item_margin"
            android:paddingLeft="@dimen/feed_item_profile_info_padd" >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="FALA, MARINHO"
                    android:textColor="@color/black"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold" />
                
		<TextView
		    android:id="@+id/text2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="5dp"
		    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
		    android:paddingRight="@dimen/feed_item_status_pad_left_right"
		    android:paddingTop="@dimen/feed_item_status_pad_top" />                
	       	       
	 </LinearLayout>
	       
</RelativeLayout>
    
</LinearLayout>