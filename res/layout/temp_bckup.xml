<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/feed_bg"
    
    android:layout_height="wrap_content">
    
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="@dimen/feed_item_margin"
	    android:layout_marginRight="@dimen/feed_item_margin"     
	     
	    android:background="@color/white"
	    android:orientation="vertical">
    
	<RelativeLayout
		android:id="@+id/timestamp"
		android:layout_marginLeft="@dimen/feed_item_margin"
		android:layout_marginRight="@dimen/feed_item_margin"
		android:layout_width="60dp"
		android:background="@color/white"
		android:layout_marginTop="@dimen/lance_margin"
		android:layout_height="fill_parent"
		android:orientation="horizontal">
	           
	       
        
        
	       <TextView
			 android:id="@+id/minutes"
			 android:layout_centerHorizontal="true"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_marginTop="@dimen/lance_margin_2"
			 
			 android:textColor="@color/grey"
			 android:textSize="@dimen/minutes" />

	       <TextView
			 android:id="@+id/extra_info"
			 android:layout_centerHorizontal="true"
			 android:layout_below="@+id/minutes"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_marginTop="@dimen/lance_margin_2"
			 
			 android:textColor="@color/grey"
			 android:textSize="@dimen/servico" />
       
	</RelativeLayout>


    
        <RelativeLayout 
            android:id="@+id/timeline"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@+id/timestamp"
	    android:layout_height="fill_parent"
	    
	    android:layout_marginRight="@dimen/feed_item_margin"        
	    android:background="@color/white"
	    android:orientation="vertical">
    
    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/silver"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_line">

        <!-- the semi transparent circle on the line -->

    </FrameLayout>
            <View
            android:layout_width="11dp"
            android:layout_marginTop="@dimen/lance_margin"
            android:layout_centerHorizontal="true"
            android:layout_height="11dp"
            android:background="@drawable/bg_circle"/>
    
    </RelativeLayout>
       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_toRightOf="@+id/timeline"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/lance_margin"
            android:paddingLeft="@dimen/feed_item_profile_info_padd" >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
            
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/lance_margin"  
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold" />
                
		<TextView
		    android:id="@+id/text2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="5dp"
		    android:layout_marginTop="@dimen/lance_margin"  
		    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
		    android:paddingRight="@dimen/feed_item_status_pad_left_right"/>
		            
	       	       
	 </LinearLayout>
 
    </RelativeLayout>
</LinearLayout>
